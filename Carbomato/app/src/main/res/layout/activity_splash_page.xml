<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_green">

    <androidx.cardview.widget.CardView
        android:id="@+id/logo_container"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:cardCornerRadius="110dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/surface_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <ImageView
            android:id="@+id/splash_page_imageView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            app:cardCornerRadius="110dp"
            android:layout_gravity="center"
            android:src="@drawable/splash_page_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/splash_page_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bungee_regular"
        android:text="CARBOMATO"
        android:textColor="@color/text_on_primary"
        android:textSize="34sp"
        android:letterSpacing="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_container" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:text="Healthy Plants, Happy You"
        android:textColor="@color/primary_light"
        android:textSize="16sp"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_page_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>